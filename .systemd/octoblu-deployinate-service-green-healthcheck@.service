[Unit]
Description=Healthcheck vulcand for octoblu-deployinate-service
After=docker.service

[Service]
EnvironmentFile=/etc/environment
RemainAfterExit=yes
ExecStart=/bin/sh -c "/usr/bin/echo 'Checking backends before switching vulcand' && \
  /usr/bin/docker run --rm octoblu/deployinate-healthcheck \
    -e ETCDCTL_PEERS=http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):2379 \
    octoblu deployinate-service green && \
  /usr/bin/docker run --rm octoblu/vctl frontend upsert \
    --id octoblu-deployinate-service \
    --backend octoblu-deployinate-service-green \
    --route 'Host(\"$(etcdctl get /octoblu/deployinate-service/host)\")' \
    --vulcan http://$(ifconfig docker0 | grep 'inet ' | awk '{print $2}'):8182 && \
  /usr/bin/etcdctl set /octoblu/deployinate-service/active green \
"

[X-Fleet]
X-ConditionMachineOf=octoblu-deployinate-service-green@%i.service
